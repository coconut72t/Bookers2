<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error-explanation">
        <div id="error-message"><h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li>
        <%= message %>
        </li>
        </ul>
        <% end %>
        </div>
        <% end %>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <lavel for="user_name">Name</label></br>
        <%= f.text_field :name, id:"inputName", placeholder:"名前" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label></br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="user_body">Introduction</label></br>
        <%= f.text_area :introduction %>
      </div>
        <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        <% end %>
    </div>
  </div>
</div>